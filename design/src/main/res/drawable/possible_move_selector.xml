<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">

            <corners android:radius="5dp" />
            <size
                android:width="16dp"
                android:height="16dp" />

            <solid android:color="@android:color/transparent" />

        </shape>
    </item>

    <item
        android:bottom="1.5dp"
        android:left="0.3dp"
        android:top="-0.3dp">

        <shape android:shape="rectangle">

            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <corners android:radius="5dp" />
            <stroke
                android:width="0.5dp"
                android:color="@color/white" />
            <size
                android:width="12dp"
                android:height="12dp" />

        </shape>
    </item>

</layer-list>
